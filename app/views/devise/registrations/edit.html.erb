<h2 class="hero-title-log-in">Edit <%= resource_name.to_s.humanize %></h2>
<div class="form-for-everything">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-for-input">
      <%= f.label :email, class: "form-my-label"%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-my-control" %>
    </div>

    <div class="form-for-input">
      <%= f.label :name, style: "display: block", class: "form-my-label" %>
      <%= f.text_field :name, class: "form-my-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-for-input">
      <%= f.label :password, class: "form-my-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-my-control", placeholder: "Leave blank if you don't need it" %>
    </div>

    <div class="form-for-input">
      <%= f.label :password_confirmation, class: "form-my-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-my-control" %>
    </div>

    <div class="form-for-input">
      <%= f.label :current_password, class: "form-my-label" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-my-control", placeholder: "We need your current password" %>
    </div>

    <div class="form-submit-all">
      <%= f.submit class: "button-primary" %>
    </div>
    <div class="form-submit-all">
      <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "button-danger" %>
      </div>
  <% end %>
</div>
