<div class="devise-container">
  <h1 class="hero-title notebook">Notebook</h1>
  <div class="log-in-container">
    <h2 class="hero-title">Sign up</h2>
    <div class="form-for-everything">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-for-input">
          <%= f.label :email, class: "form-my-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-my-control" %>
        </div>
        
        <div class="form-for-input">
          <%= f.label :name, style: "display: block", class: "form-my-label" %>
          <%= f.text_field :name, class: "form-my-control" %>
        </div>

        <div class="form-for-input">
          <%= f.label :password, class: "form-my-label" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-my-control" %>
        </div>

        <div class="form-for-input">
          <%= f.label :password_confirmation, class: "form-my-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-my-control" %>
        </div>

        <div class="form-submit-all">
          <%= f.submit "Sign up", class: "button-primary" %>
        </div>
      <% end %>
    </div>
    <div class="devise-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>